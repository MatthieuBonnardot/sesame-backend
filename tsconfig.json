{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "types": [],
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.html", "src/**/*.css"],
  "exclude": ["**/node_modules", "**/*.spec.ts"]
}
